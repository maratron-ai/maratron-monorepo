# Maratron AI MCP Server Configuration Template
# Copy this file to .env and customize for your environment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SECURITY: Generate secure password with: openssl rand -base64 32
POSTGRES_PASSWORD=your-secure-postgres-password-here
# NOTE: Special characters in password must be URL-encoded for DATABASE_URL
# Use: node -e "console.log(encodeURIComponent('your-password'))"
DATABASE_URL=postgresql://maratron:your-url-encoded-password-here@localhost:5432/maratrondb

# Database connection pool settings
DATABASE__MIN_CONNECTIONS=1
DATABASE__MAX_CONNECTIONS=10
DATABASE__CONNECTION_TIMEOUT=60.0
DATABASE__COMMAND_TIMEOUT=60.0

# Database operation settings
DATABASE__QUERY_TIMEOUT=30.0
DATABASE__RETRY_ATTEMPTS=3
DATABASE__RETRY_DELAY=1.0

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER__NAME=database agent
SERVER__VERSION=1.0.0
SERVER__DESCRIPTION=Maratron AI MCP Database Server

# Runtime settings
SERVER__DEBUG=false
SERVER__LOG_LEVEL=INFO

# Performance settings
SERVER__MAX_CONCURRENT_OPERATIONS=100
SERVER__OPERATION_TIMEOUT=30.0

# =============================================================================
# WEATHER API CONFIGURATION
# =============================================================================
# Get your free API key from: https://openweathermap.org/api
WEATHER__API_KEY=your-openweathermap-api-key-here
WEATHER__API_URL=https://api.openweathermap.org/data/2.5
WEATHER__CACHE_TTL_MINUTES=10
WEATHER__REQUEST_TIMEOUT=5.0

# =============================================================================
# GLOBAL SETTINGS
# =============================================================================
TIMEZONE=UTC